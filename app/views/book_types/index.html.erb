<h1>Listing book_types</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <% form_tag book_types_path, :method => 'get' do%>
    <p>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Search", :name => nil %>
    </p>
  <% end %>
<% @book_types.each do |book_type| %>
  <tr>
    <td><%= book_type.name.force_encoding('utf-8') %></td>
    <td><%= link_to 'Show', book_type %></td>
    <td><%= link_to 'Edit', edit_book_type_path(book_type) %></td>
    <td><%= link_to 'Destroy', book_type, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Book type', new_book_type_path %>
&nbsp;&nbsp; 
<%= link_to 'back' , home_index_path %>
<p><%= will_paginate @book_types %></p>
