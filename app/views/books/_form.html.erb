<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :desc %><br />
    <%= f.text_area :desc, :rows => 7 %>
  </div>
  <div class="field">
    <%= f.label :btype_id %><br />
    <!-- <%= f.text_field :btype_id %> -->
    <%=  select("book", "btype_id", BookType.all.collect {|p| [ p.name, p.id ] },  {:prompt => '--Book_Type--'})%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
